{
    "compilerOptions": {
      "target": "ES6",
      "module": "ES6",
      "rootDir": "src",
      "outDir": "build",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "moduleResolution": "Node",
      "declaration": true
    }
  }